{# --- Input Field -- #}
{% macro input_field(inputOptions) %}
	<div class="form-group g-3">
		{% if inputOptions.label is defined %}
			<label class="form-label">{{ inputOptions.label }}</label>
		{% endif %}
		<input class="form-control" type="{{ inputOptions.type | default('text') }}" {% for attribute, value in inputOptions %} {% if attribute in ['name', 'placeholder', 'value', 'id', 'size'] %} {{ attribute }}="{{ value|e }}" {% endif %} {% endfor %} {{ inputOptions.require is defined ? 'required' }} {{ inputOptions.readOnly is defined ? 'readonly="readonly"' }} {% if inputOptions.character is defined %} {% set characterActions = { 'mixed': "mixed(this); this.value=this.value.toUpperCase();", 'string': "onlyChaines(this); this.value=this.value.toUpperCase();", 'numeric': "onlyNumeric(this);" } %} {% set eventCode = characterActions[inputOptions.character] ?? '' %} {% if eventCode %} onkeyup="{{ eventCode|e }}" {% endif %} {% endif %}>
		{% if inputOptions.feedback is defined %}
			<div class="invalid-feedback">{{ inputOptions.feedback }}</div>
		{% endif %}
		<div class="message"></div>
	</div>
{% endmacro %}
{# --- End Input Field -- #}

{# --- submit buttom -- #}
{% macro submit(label , icon) %}
	<div class="form-group">
		<button name="submit" class="btn btn-block w-100" id="BtnValidate" type="submit" style="padding-right: 10px;background-color:#00738c;color: #fff;margin-top:7px">
			{% if icon != false %}
				<i class="{{ icon }} "></i>
			{% endif %}
			{{ label }}</button>
	</div>
{% endmacro %}
{# --- End submit buttom -- #}

{# --- Other submit buttom -- #}
{% macro validation( label , name , class , value , icon ) %}
	<div class="form-group" align="right" id="validate_btn">
		<button type="btn" name="{{ name }}" class="btn btn-block w-100 {{ class }}" {% if value != false %} value="{{ value }}" {% endif %}>
			{% if icon != false %}
				<i class="{{ icon }}"></i>
			{% endif %}
			{{ label }}</button>
	</div>
{% endmacro %}
{# --- End Other submit buttom -- #}

{# --- Input Field for filters -- #}
{% macro filter_field() %}
	<div class="input-group">
		<input type="text" id="LargeFilters" class="form-control border-0 bg-light" placeholder="Toutes les colonnes...">
		<div class="input-group-append">
			<button id="button-addon1" type="submit" class="btn btn-link text-success">
				<i class="fa fa-search"></i>
			</button>
		</div>
	</div>
{% endmacro %}
{# --- End Input Field for filters -- #}

{# --- Other Input Field for filters -- #}
{% macro input_filter() %}
	<div class="bg-light rounded rounded-pill classsearch">
		<div class="input-group" id="searchbar">
			<input type="search" placeholder="Toutes les colonnes..." class="form-control border-0 bg-light" id="LargeFilters">
			<div class="input-group-append">
				<button id="button-addon1" type="submit" class="btn btn-link text-dark">
					<i class="fa fa-search"></i>
				</button>
			</div>
		</div>
	</div>
{% endmacro %}
{# --- End Other Input Field for filters -- #}

{# --- Other Input Field for filters -- #}
{% macro filter_search(name_searchbar , name_submit , placeholder , id ) %}
	<form {% if id == false %} class="{{ id }}" novalidate {% endif %} method="GET">
		<div class="bg-light rounded rounded-pill classsearch">
			<div class="input-group" id="searchbar">
				<input type="search" name="{{ name_searchbar }}" placeholder="{{ placeholder }}" class="form-control border-0 bg-light" id="LargeFilters">
				<div class="input-group-append">
					<button id="button-addon1" name="{{ name_submit }}" type="submit" class="btn btn-link text-dark">
						<i class="fa fa-search"></i>
					</button>
				</div>
			</div>
		</div>
	</form>
{% endmacro %}
{# --- End Other Input Field for filters -- #}

{# --- Others submit buttom -- #}
{% macro button( href , label , class , id ) %}
	<button type="submit" id="{{ id }}" style="padding-right: 10px;background-color: #00738c;color: white" class="btn {{ class }} w-100">
		<a href="{{ href }}">{{ label }}</a>
	</button>
{% endmacro %}
{# --- End Others submit buttom -- #}

{# --- Textarea input field -- #}
{% macro textarea_field( name , label , indications , size ) %}
	<div class="form-group">
		<label class="form-label">{{ label }}</label>
		<textarea class="form-control textarea" rows="3" name="{{ name }}" id="inputlarge" , onkeyup="chat(this);" {% if size != false %} maxlength={{ size }} {% endif %} required></textarea>
		<div class="invalid-feedback">{{ indications }}</div>
	</div>
{% endmacro %}
{# --- End Textarea input field -- #}

{# --- Import input field -- #}
{% macro import_field(name , id , format , label , size) %}
	<label class="form-label">{{ label }}</label><br>
	<input type="file" name="{{ name }}" id="{{ id }}" accept="{{ format }}" data-max-size="{{ size }}" required>
	<div class="invalid-feedback">This field is required!!!</div>
	<p id="errorMessage"></p>
	<hr>
{% endmacro %}
{# --- End Import input field -- #}

{# --- Action select Field -- #}
{% macro actions_field( inputOptions ) %}
	<!-- The validation select has started -->
	<div class="blockactionsfroms">
		<select id="export-options" class="form-select custom-select actionsbutton" name="_sendselected_" onchange="submitActions();">
			<option selected="selected" value="">----------- Actions list ----------</option>
			{% if inputOptions.datas is defined %}
				{% for action in inputOptions.datas %}
					{% set counter = (counter | default(0)) + 1 %}
					<option value="{{ counter }}">{{ action }}</option>
				{% endfor %}
			{% endif %}
			{% if inputOptions.export is defined %}
				<option id="custom-excel" value="excel" data-filename="{{ inputOptions.export ? inputOptions.export : 'Export_table' }}">EXPORT TABLE</option>
			{% endif %}
		</select>
		{% if inputOptions.pagination is defined %}
			{{ inputOptions.pagination }}
		{% endif %}
	</div>
	<!-- End of validation select -->
{% endmacro %}
{# --- End Action select Field -- #}

{% macro buttom_href(href , label , class , id , icon) %}
	<button type="submit" id="{{ id }}" class="btn {{ class }}">
		{% if icon != false %}
			<i class="{{ icon }} "></i>
		{% endif %}
		<a href="{{ href }}">{{ label }}</a>
	</button>
{% endmacro %}

{% macro radio_button( name , class , id , value , label , required , disabled ) %}
	{% if label == true %}
		<div class="form-check">
		{% endif %}
		<input class="{{ class }}" {% if id != false %} id="{{ id }}" {% endif %} {% if name != false %} name="{{ name }}" {% endif %} {% if value != false %} value="{{ value }}" {% endif %} type="checkbox" {% if required != false %} required {% endif %} {% if disabled != false %} disabled {% endif %}>
		{% if label != false %}
			<label class="form-check-label" for="flexCheckChecked">{{ label }}</label>
		{% endif %}
		{% if label != false %}
		</div>
	{% endif %}
{% endmacro %}

{% macro loader() %}
	<div class="loaderpage">
		<span class="pagetools_loader"></span>
	</div>
{% endmacro %}

{% macro ExportFiles( libelle , add , xlsx , copie , csv ) %}
	<div class="btn-group" id="backbouton" align="right">
		{% if xlsx == true %}
			<button class="btn btn-secondary" id="custom-excel" data-filename="{{ libelle }}" tabindex="0" aria-controls="TableFromDatas" type="button">
				<span>Export
					{{ add }}
					(.xlsx)</span>
			</button>
		{% endif %}
		{% if copie == true %}
			<button class="btn btn-secondary buttons-copy" id="custom-copy" data-filename="{{ libelle }}" tabindex="0" aria-controls="TableFromDatas" type="button">
				<span>Copy
					{{ add }}</span>
			</button>
		{% endif %}
		{% if csv == true %}
			<button class="btn btn-secondary" id="custom-csv" data-filename="{{ libelle }}" tabindex="0" aria-controls="TableFromDatas" type="button">
				<span>Export
					{{ add }}
					(.csv)</span>
			</button>
		{% endif %}
	</div>
{% endmacro %}
